<h1>Listing pages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Ancestry</th>
	  <th>Mappable</th>
	  <th>Searchable</th>
	  <th>Keywords</th>
	  <th>Icon</th>
	  <th>Secondary</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><%= page.content %></td>
        <td><%= page.ancestry %></td>
		<td><%= page.mappable%></td>
		<td><%= page.searchable%></td>
		<td><%= page.keywords%></td>
		<td><%= (image_tag "icons/#{page.icon.split('/').last}", size: "52x52")%></td>
		<td><%= (image_tag "icons/#{page.sec_icon.split('/').last}", size: "52x52") if page.sec_icon != nil%></td>
		
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

